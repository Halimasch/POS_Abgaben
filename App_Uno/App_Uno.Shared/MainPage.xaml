<Page
    x:Class="App_Uno.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_Uno"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="IPv4 Adressen Rechner" Margin="20" FontSize="30" MinWidth="50"/>
            <StackPanel Orientation="Horizontal" Margin="10 0">
                <TextBlock Text="IP Address" Margin="0 20"/>
                <TextBox x:Name="ipInput" PlaceholderText="192.168.0.1" Text="192.168.0.1" MaxHeight="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10 0">
                <TextBlock Text="Net Mask /" Margin="0 20"/>
                <TextBox x:Name="NetmaskInput" PlaceholderText="24" Text="24" MaxHeight="20" MinWidth="50"/>
            </StackPanel>
            <Button Content="Calculate" Click="onClick1" />
        </StackPanel>
    </Grid>
</Page>
